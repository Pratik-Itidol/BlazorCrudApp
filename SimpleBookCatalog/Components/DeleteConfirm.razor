@page "/delete/{id}"
@inject IBookRepository bookRepository
@rendermode InteractiveServer
@inject NavigationManager navigation

<PageTitle>Delete Book</PageTitle>

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg">
                <div class="card-header bg-danger text-white">
                    <h3 class="mb-0">Confirm Delete</h3>
                </div>
                <div class="card-body">
                    <p class="lead">Are you sure you want to delete this book?</p>
                    <p class="text-muted">This action cannot be undone.</p>
                </div>
                <div class="card-footer">
                    <div class="d-flex justify-content-end gap-2">
                        <a class="btn btn-secondary" @onclick="OnCancel">
                            Cancel
                        </a>
                        <button type="submit" class=" btn btn-danger" @onclick="DeleteProduct">
                            Delete
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



@code 
{
    [Parameter]
    public string Id { get; set; }

    public BookDTO bookdto { get; set; }

    private async Task DeleteProduct()
    {     
        var id = Guid.Parse(Id);
        await bookRepository.DeleteBookAsync(id);
        navigation.NavigateTo("/");   
    }

    private void OnCancel()
    {
        navigation.NavigateTo("/");
    }
}
